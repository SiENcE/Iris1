/*
-------------------------------------------------------------------------------------------------
global vars
------------------------------------------------------------------------------------------------
*/

var help;
var help_x = 270;
var help_y = 5;
var help_open = 0;

/*
-------------------------------------------------------------------------------------------------
 forward declarations
-------------------------------------------------------------------------------------------------
*/

display_help();

/*
-------------------------------------------------------------------------------------------------
Event Handelers
-------------------------------------------------------------------------------------------------
*/

handler_on_help (const sender)
{
	if(help_open == 0) {
		help_open = 1;
		display_help();
	}
}

handler_on_close_help(const sender)
{
	help_open = 0;
}


/*
-------------------------------------------------------------------------------------------------
Display Functions
-------------------------------------------------------------------------------------------------
*/

display_help()
{
	var container = gui_addform(config_getvalue(CONFIG_WIDTH) - 450, 20, "gfm/help.gfm", 1);
	gui_setcontainer(container);
	control_setposition (container, 30, 20);
	gui_setcontainer();
}
